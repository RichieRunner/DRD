@using Richie.DRD.Models

@model IEnumerable<Richie.DRD.Models.Player>

@*@{
    ViewBag.Title = "Index";
}*@

<h1>
    @Html.ActionLink("Minors", "Index/", "DRD")
</h1>


    @Html.Action("GetTeamIndex")

<h3 class="unselectable">Roster Size: @ViewBag.TeamRosterSize</h3>

<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th style="@(ViewBag.TeamPID != 17 ? "display:none" : "table-header-group")">
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th class="unselectable">
                @Html.DisplayNameFor(model => model.ABs)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model) {
        <tr>
            <td> 
                @*@if(String.IsNullOrEmpty(item.MLBID.ToString()))*@
                @if(item.MLBID > 0)
                { 
                    <a href="http://m.mlb.com/player/@(item.MLBID)" target="_blank">@Html.DisplayFor(modelItem => item.NameTag)</a>
                }
                else 
                {
                @Html.DisplayFor(modelItem => item.NameTag)
                }
            
                @*<a href="http://m.mlb.com/player/@(item.MLBID)" target="_blank">@Html.DisplayFor(modelItem => item.FullName)</a>: @Html.DisplayFor(modelItem => item.FullName)*@
                @*<span class="glyphicon glyphicon-ban-circle text-danger fake-link" title="please demote" data-toggle="tooltip"></span>*@
            </td>
            <td style="@(ViewBag.TeamPID != 17 ? "display:none" : "table-cell")" class="unselectable">
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td class="@(item.ABs == 0 ? "noservicetime unselectable" : "unselectable")">
                @Html.DisplayFor(modelItem => item.ABs)
            </td>
            <td class="unselectable">
                @Html.ActionLink("Edit", "Edit", new { id = item.PlayerPID })
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
    }

</table>

@if (ViewBag.TeamPID != 17)
{
    @Html.Action("GetMajors");
}

<script>
    //$("table tr:contains('Luis')").addClass("danger").add("<p id='new'>new paragraph</p>")
    $('td:contains("Luis")').parent().find('td:eq(0)').append($('<span class="glyphicon glyphicon-ban-circle text-danger fake-link" title="please demote" data-toggle="tooltip"></span>'));

    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

